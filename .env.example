# ── Database ─────────────────────────────────────────────────────────────────
POSTGRES_USER=uniplanner
POSTGRES_PASSWORD=change_this_postgres_password_min_16_chars
POSTGRES_DB=uniplanner
POSTGRES_PORT=5432

# ── Backend ───────────────────────────────────────────────────────────────────
BACKEND_PORT=4000
DATABASE_URL=postgresql://uniplanner:change_this_postgres_password_min_16_chars@localhost:5432/uniplanner?schema=public
JWT_ACCESS_SECRET=change_this_access_secret_min_32_chars
JWT_REFRESH_SECRET=change_this_refresh_secret_min_32_chars
ACCESS_TOKEN_TTL_MINUTES=15
REFRESH_TOKEN_TTL_DAYS=7

# ── Redis (BullMQ job queue) ──────────────────────────────────────────────────
# Generate with: openssl rand -hex 32
REDIS_PASSWORD=change_this_redis_password_min_16_chars
# Local dev (with auth): redis://:change_this_redis_password_min_16_chars@localhost:6379
# Docker: set automatically by docker-compose.yml
REDIS_URL=redis://:change_this_redis_password_min_16_chars@localhost:6379

# ── CORS ─────────────────────────────────────────────────────────────────────
# Set to the URL where the frontend is served (used for CORS and password reset links)
FRONTEND_URL=http://localhost:5173

# ── Optional SMTP (leave empty to print emails to console) ────────────────────
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=UniPlanner <no-reply@uniplanner.local>
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@uniplanner.local

# ── Frontend ──────────────────────────────────────────────────────────────────
# Leave empty to use the Vite proxy (/api → backend). Set only if you're NOT
# using the Vite proxy (e.g., serving the built frontend from a CDN).
VITE_API_BASE_URL=

# ── Vite dev proxy target (Docker only) ───────────────────────────────────────
# When running inside Docker, the frontend container proxies /api requests to
# the backend service. This is set automatically by docker-compose.yml.
# API_PROXY_TARGET=http://backend:4000
