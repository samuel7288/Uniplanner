# ============================================================================
# UniPlanner — Production Environment Variables
# Copy this file to .env and fill in your values before deploying.
# ============================================================================

# ── Domain ──────────────────────────────────────────────────────────────────
# Your domain name. Caddy will automatically provision HTTPS certificates.
# Example: uniplanner.yourdomain.com
DOMAIN=uniplanner.example.com

# ── Database ─────────────────────────────────────────────────────────────────
POSTGRES_USER=uniplanner
POSTGRES_PASSWORD=CHANGE_ME_use_a_strong_password
POSTGRES_DB=uniplanner
POSTGRES_PORT=5432

# ── Backend ──────────────────────────────────────────────────────────────────
BACKEND_PORT=4000
DATABASE_URL=postgresql://uniplanner:CHANGE_ME_use_a_strong_password@db:5432/uniplanner?schema=public

# IMPORTANT: Generate unique secrets! Use: openssl rand -hex 32
JWT_ACCESS_SECRET=change_this_access_secret_min_32_chars
JWT_REFRESH_SECRET=change_this_refresh_secret_min_32_chars
ACCESS_TOKEN_TTL_MINUTES=15
REFRESH_TOKEN_TTL_DAYS=7

# ── Redis ────────────────────────────────────────────────────────────────────
REDIS_PASSWORD=change_this_redis_password_min_16_chars
REDIS_URL=redis://:change_this_redis_password_min_16_chars@redis:6379

# ── CORS / Frontend URL ─────────────────────────────────────────────────────
# Must match the public URL where users access the app
FRONTEND_URL=https://uniplanner.example.com

# ── Optional SMTP (leave empty to print emails to console) ──────────────────
# For email notifications (assignment reminders, password resets, etc.)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=UniPlanner <no-reply@uniplanner.example.com>
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@uniplanner.example.com
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://uniplanner.example.com/api/google-calendar/oauth/callback

# ── Frontend ─────────────────────────────────────────────────────────────────
# Leave empty — Caddy proxies /api to the backend automatically.
VITE_API_BASE_URL=
