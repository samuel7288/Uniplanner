# Caddyfile — reverse proxy for UniPlanner
# Caddy automatically provisions and renews HTTPS certificates via Let's Encrypt.
#
# Replace {$DOMAIN} with your actual domain (e.g., uniplanner.example.com).
# Set the DOMAIN environment variable in .env or docker-compose.

{$DOMAIN:localhost} {
	# API requests → backend container
	handle /api/* {
		reverse_proxy backend:4000
	}

	# Everything else → frontend container (nginx serving the built PWA)
	handle {
		reverse_proxy frontend:80
	}

	# Security headers
	header {
		X-Content-Type-Options nosniff
		X-Frame-Options DENY
		Referrer-Policy strict-origin-when-cross-origin
		Permissions-Policy "camera=(), microphone=(), geolocation=()"
	}

	# Gzip/Brotli compression
	encode gzip zstd

	# Logging
	log {
		output stdout
		format console
	}
}
