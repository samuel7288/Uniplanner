{
  "info": {
    "name": "UniPlanner API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:4000/api" },
    { "key": "accessToken", "value": "" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"demo@uniplanner.app\",\n  \"password\": \"Demo12345!\"\n}"
            }
          }
        },
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"New Student\",\n  \"email\": \"new@student.com\",\n  \"password\": \"Password123!\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Dashboard Summary",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
        "url": "{{baseUrl}}/dashboard/summary"
      }
    },
    {
      "name": "Assignments CRUD",
      "item": [
        {
          "name": "Create assignment",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/assignments",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Task from Postman\",\n  \"dueDate\": \"2026-03-01T12:00:00.000Z\",\n  \"priority\": \"HIGH\",\n  \"status\": \"PENDING\",\n  \"repeatRule\": \"NONE\"\n}"
            }
          }
        },
        {
          "name": "List assignments",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
            "url": "{{baseUrl}}/assignments"
          }
        }
      ]
    },
    {
      "name": "Exams CRUD",
      "item": [
        {
          "name": "Create exam",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/exams",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Exam from Postman\",\n  \"dateTime\": \"2026-03-05T15:00:00.000Z\",\n  \"type\": \"MIDTERM\",\n  \"reminderOffsets\": [1440, 60]\n}"
            }
          }
        },
        {
          "name": "List exams",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
            "url": "{{baseUrl}}/exams"
          }
        }
      ]
    },
    {
      "name": "Calendar ICS",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
        "url": "{{baseUrl}}/calendar/ics"
      }
    }
  ]
}
